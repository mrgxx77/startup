mixin blog(oneCard)
    .recent 
        figure 
            figcaption 
                .between
                    .img
                        img(src=oneCard.img, alt=oneCard.alt)
                    .info 
                        .start
                            .date
                                p #{oneCard.date}
                                p.month #{oneCard.month}
                            .title
                                p #{oneCard.title}
                                p.by 
                                    i #{oneCard.by}
                        .toggle-block
                            ul.description
                                for item in oneCard.description 
                                    li #{item}
                                .more.toggle-text
                                    for item in oneCard.more 
                                        li #{item}
                            p.read.toggle-btn
                                a #{oneCard.read}